# Environment Variables for AI Sentiment Analysis

# ===== API Configuration =====
API_PORT=8080
API_HOST=0.0.0.0
API_WORKERS=1
API_RELOAD=true

# ===== Database Configuration =====
# MySQL (Analytics & Reporting)
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=secret123
MYSQL_DB=aisent
MYSQL_ROOT_PASSWORD=secret123

# MongoDB (Document Store)
MONGO_URI=mongodb://mongo:27017/aisent
MONGO_DB=aisent

# Redis (Cache & Queue)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ===== Model Configuration =====
MODEL_BACKEND=rule  # Options: rule, transformer, llm
MODEL_NAME=rule_based_vi
MODEL_CACHE_TTL=600
MODEL_MAX_LENGTH=512

# Transformer specific
TRANSFORMER_MODEL=vinai/phobert-base
TRANSFORMER_DEVICE=cpu  # cpu, cuda, auto
TRANSFORMER_BATCH_SIZE=8

# LLM specific
LLM_API_URL=http://localhost:11434/api/generate
LLM_MODEL_NAME=llama2-vietnamese
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3
# ===== Cache Configuration =====
CACHE_TTL=600
CACHE_MAX_SIZE=10000
CACHE_ENABLED=true

# ===== Worker Configuration =====
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_TIMEOUT=300

# ===== Batch Processing =====
BATCH_MAX=128
BATCH_TIMEOUT=300
ASYNC_ENABLED=true

# ===== Logging & Monitoring =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json, text
LOG_FILE=/app/logs/app.log

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# ===== Security =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# ===== Language Detection =====
LANG_DETECT_ENABLED=true
DEFAULT_LANG=vi
SUPPORTED_LANGS=vi,en

# ===== Performance =====
PRELOAD_MODELS=true
WARM_UP_REQUESTS=5

# ===== Development =====
DEBUG=false
TESTING=false
ENV=development  # development, staging, production

